        <item name="itemTextAppearanceInactive">
            @style/MyBottomNavigationViewTextAppearance
        </item>
        <item name="fontFamily">
            @font/sf_pro_display_regular
        </item>
    </style>

    <style name="Theme.TestEffective" parent="Base.Theme.TestEffective" />
